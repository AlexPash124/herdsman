{
 "compilerOptions": {
  "target": "ES2022", // або "ESNext", щоб підтримувати сучасні функції
  "module": "ESNext", // підтримка top-level await
  "strict": true,
  "moduleResolution": "node",
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "skipLibCheck": true,
  "sourceMap": true,
  "outDir": "./dist",
  "resolveJsonModule": true
 },
 "include": ["src/**/*"],
 "exclude": ["node_modules"]
}
